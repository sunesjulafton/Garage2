@model Garage2.Models.IndexModel

@{
    ViewBag.Title = "Garage 2.0";
}

<h2>Parkerade fordon</h2>

<p>
    @Html.ActionLink("Parkera fordon", "Create")
</p>
<table class="table display" id="sortTable">
    <thead>
        <tr>
            <th>
                @Model.List.
            </th>
            <th>
                @Html.DisplayNameFor(model => model.List[0].RegNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.List[0].Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.List[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.List[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.List[0].ArrivalTime)
            </th>
            <th class="no-sort"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.List)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RegNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Make)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArrivalTime)
                </td>
                <td>
                    @Html.ActionLink("Redigera", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detaljer", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Kör ut", "Delete", new { id = item.Id })
                </td>
            </tr>

        }
    </tbody>
</table>


<div id="smallView">
    @Html.EnumDropDownListFor(model => model.Elements.Attributes, htmlAttributes: new { @class = "form-control" })
    @*@Html.ValidationMessageFor(model => model.VehicleAttributes, "", new { @class = "text-danger" })*@
    
    
    @foreach (var item in Model.List)
    {
        <div class="well well-sm">
            <ul class="list-unstyled">
                <li><strong>@Html.DisplayNameFor(model => item.RegNum): </strong>@Html.DisplayFor(modelItem => item.RegNum)</li>
                <li><strong>@Html.DisplayNameFor(model => item.Type):  </strong>@Html.DisplayFor(modelItem => item.Type)</li>
                <li><strong>@Html.DisplayNameFor(model => item.Make):  </strong>@Html.DisplayFor(modelItem => item.Make)</li>
                <li><strong>@Html.DisplayNameFor(model => item.Model):  </strong>@Html.DisplayFor(modelItem => item.Model)</li>
                <li><strong>@Html.DisplayNameFor(model => item.Color):  </strong>@Html.DisplayFor(modelItem => item.Color)</li>
                <li><strong>@Html.DisplayNameFor(model => item.ArrivalTime):  </strong>@Html.DisplayFor(modelItem => item.ArrivalTime)</li>
            </ul>
            @Html.ActionLink("Redigera", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Detaljer", "Details", new { id = item.Id }) |
            @Html.ActionLink("Kör ut", "Delete", new { id = item.Id })
        </div>
    }
</div>

